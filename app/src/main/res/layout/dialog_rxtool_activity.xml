<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".feature.found.dialog.RxToolDialogActivity">

    <com.hjq.bar.TitleBar
        android:id="@+id/tb_rxtool_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/dialog_rxtool_dialog" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/space_60"
        android:layout_marginEnd="@dimen/space_60"
        android:layout_marginBottom="@dimen/space_60"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_ok"
            style="@style/ButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_60"
            android:text="确认弹窗" />

        <Button
            android:id="@+id/btn_ok_cancel"
            style="@style/ButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_60"
            android:text="确认取消弹窗" />

        <Button
            android:id="@+id/btn_input"
            style="@style/ButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_60"
            android:text="输入框弹窗" />

        <Button
            android:id="@+id/btn_date"
            style="@style/ButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_60"
            android:text="选择日期弹窗" />


        <Button
            android:id="@+id/btn_shape"
            style="@style/ButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_60"
            android:text="形状加载弹窗" />

        <Button
            android:id="@+id/btn_acfun"
            style="@style/ButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_60"
            android:text="Acfun加载弹窗" />
    </LinearLayout>
</LinearLayout>
